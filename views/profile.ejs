<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="min-h-screen bg-gray-100 flex justify-center py-10">

    <div class="w-full max-w-md space-y-6">


        <div class="bg-white p-8 rounded-xl shadow-lg">

            <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
                Hello, <span class="text-blue-500"><%= user.name %></span> ðŸ‘‹
            </h1>

            <form action="/post" method="post" class="space-y-4 mb-6">
                <textarea
                    name="content"
                    placeholder="What's on your mind?"
                    rows="4"
                    class="w-full px-4 py-2 border rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-400"
                ></textarea>

                <input
                    type="submit"
                    value="Create Post"
                    class="w-full bg-blue-500 text-white py-2 rounded-lg font-semibold hover:bg-blue-600 transition cursor-pointer"
                >
            </form>

         
            <a
                href="/logout"
                class="block w-full text-center bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition"
            >
                Logout
            </a>

        </div>

     
        <div class="bg-gray-100 p-4 rounded-2xl space-y-4">

            <% user.posts.reverse().forEach(function(post) { %>

                <div class="bg-white p-5 rounded-xl shadow space-y-3">
                    <h3 class="text-blue-500 mb-2">@<%= user.username%></h3>
                    <p class="text-gray-800">
                        <%= post.content %>
                    </p>

                    <div class="flex items-center gap-3">
                        <span class="text-sm text-gray-500">
                            <%= post.likes.length%>
                        </span>
                        <a
                            href="/like/<%= post._id %>"
                            class="flex items-center gap-1 text-sm text-blue-500 hover:text-blue-600"
                        >
                            <%= post.likes.indexOf(user._id) === -1 ? "Like"  : "Unlike" %>
                        </a>


                        <a
                            href="/edit/<%= post._id %>"
                            class="flex items-center gap-1 text-sm text-blue-500 hover:text-blue-600"
                        >
                            Edit
                        </a>

                        
                    </div>

                </div>

            <% }) %>

        </div>

    </div>

</body>
</html>
